# Application
NODE_ENV=development  # READY
PORT=3000  # READY
API_PREFIX=api  # READY
APP_NAME=NestJS Monolith Template  # READY
API_VERSION=1  # READY

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/nest_monolith?schema=public  # READY
DATABASE_HOST=localhost  # READY
DATABASE_PORT=5432  # READY
DATABASE_USER=postgres  # READY
DATABASE_PASSWORD=postgres  # READY (change for production)
DATABASE_NAME=nest_monolith  # READY
DATABASE_SYNCHRONIZE=false  # READY
DATABASE_LOGGING=false  # READY

# Redis
REDIS_HOST=localhost  # READY
REDIS_PORT=6379  # READY
REDIS_PASSWORD=  # READY
REDIS_TTL=3600  # READY

# Logging
LOG_LEVEL=debug  # READY
LOG_OUTPUT=console  # READY

# CORS
CORS_ENABLED=true  # READY
CORS_ORIGIN=http://localhost:3000  # READY

# Rate limiting
THROTTLE_TTL=60  # READY
THROTTLE_LIMIT=100  # READY

# Metrics
METRICS_ENABLED=true  # READY

# pgAdmin (docker only)
PGADMIN_PORT=5050  # INFRA
PGADMIN_EMAIL=admin@example.com  # INFRA
PGADMIN_PASSWORD=admin  # INFRA
